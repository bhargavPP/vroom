@model vroom.Models.ViewModels.ModelViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info"><i class="fas fa-plus"></i>Add Model of Vehicle</h2>
<form method="post" asp-action="Create">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            <select asp-for="Model.MakeID" asp-items="Model.CSelectListItem(Model.Makes)" class="form-control"></select>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Model.Name"></label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>

</form>

